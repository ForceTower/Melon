<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory
        android:title="@string/settings_notification_messages_label">
        
        <SwitchPreference
            android:defaultValue="true"
            android:key="stg_ntf_message_teacher"
            android:summary="@string/settings_ntf_message_teacher_info"
            android:title="@string/settings_ntf_message_teacher"/>
    
        <SwitchPreference
            android:defaultValue="true"
            android:key="stg_ntf_message_uefs"
            android:summary="@string/settings_ntf_message_uefs_info"
            android:title="@string/settings_ntf_message_uefs"/>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/settings_notification_grades_label">
        
        <SwitchPreference
            android:defaultValue="false"
            android:key="stg_ntf_grade_create"
            android:title="@string/settings_ntf_grade_create"
            android:summary="@string/settings_ntf_grade_create_info" />
    
        <SwitchPreference
            android:defaultValue="false"
            android:key="stg_ntf_grade_date"
            android:title="@string/settings_ntf_grade_date"
            android:summary="@string/settings_ntf_grade_date_info" />
    
        <SwitchPreference
            android:defaultValue="true"
            android:key="stg_ntf_grade_change"
            android:title="@string/settings_ntf_grade_change"
            android:summary="@string/settings_ntf_grade_change_info" />
    
        <SwitchPreference
            android:defaultValue="true"
            android:key="stg_ntf_grade_posted"
            android:title="@string/settings_ntf_grade_posted"
            android:summary="@string/settings_ntf_grade_posted_info" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:title="@string/settings_notification_general_label">
    
        <SwitchPreference
            android:defaultValue="true"
            android:key="stg_ntf_event_created"
            android:title="@string/settings_ntf_event_created"
            android:summary="@string/settings_ntf_event_created_info" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>