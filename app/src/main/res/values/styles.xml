<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="AppTheme.BottomNavigation.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <!--<item name="android:background">@drawable/bottom_sheet_dialog_background</item>-->
    </style>

    <style name="BottomSheetEntryDivider">
        <item name="android:background">#EEEEEE</item>
    </style>

    <style name="TextAppearanceSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="TextAppearanceTabLayout" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
