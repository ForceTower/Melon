<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="32dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="32dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <ImageView
            android:id="@+id/evaluate_home"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@mipmap/find_profiles"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@id/guideline_image"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/workforce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/evaluation_options"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/guideline_image" />

        <ImageView
            android:id="@+id/icon_teacher"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="80dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_school_hat_black_24dp"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/workforce" />

        <TextView
            android:id="@+id/teachers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/evaluation_teachers"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_teacher"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/icon_teacher"
            app:layout_constraintTop_toTopOf="@+id/icon_teacher" />

        <ImageView
            android:id="@+id/icon_disciplines"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_discipline_black_24dp"
            android:tint="@color/white"
            android:importantForAccessibility="no"
            app:layout_constraintTop_toBottomOf="@id/teachers"
            app:layout_constraintStart_toStartOf="@id/guideline_start"/>

        <TextView
            android:id="@+id/disciplines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/evaluation_disciplines"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/icon_disciplines"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/icon_disciplines"
            app:layout_constraintTop_toTopOf="@+id/icon_disciplines" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>