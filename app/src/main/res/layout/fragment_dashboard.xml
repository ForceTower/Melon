<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_label_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/label_evaluate_recent_class"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"
                android:drawableStart="@drawable/ic_live_help_black_24dp"
                android:drawablePadding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/evaluation_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                tools:itemCount="1"
                tools:listitem="@layout/item_recent_class_resumed"
                app:layout_constraintTop_toBottomOf="@id/text_label_evaluation"/>

            <TextView
                android:id="@+id/text_label_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_bookmark_border_black_24dp"
                android:drawablePadding="12dp"
                android:text="@string/label_today_schedule"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/evaluation_recycler" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_classes"
                tools:itemCount="2"
                tools:listitem="@layout/item_class_resumed" />

            <TextView
                android:id="@+id/text_label_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_recent_messages"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_message_black_24dp"
                android:drawablePadding="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_classes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_messages"
                tools:itemCount="2"
                tools:listitem="@layout/item_sagres_message" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>