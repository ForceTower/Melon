<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:id="@+id/text_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        tools:text="Painel de Controle"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_user_picture"
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="end|center_vertical"
                        android:transitionName="@string/user_image_transition"
                        android:padding="8dp"
                        android:layout_marginEnd="8dp"
                        tools:src="@tools:sample/avatars"/>
                </androidx.appcompat.widget.Toolbar>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TabLayout.Colored"
                    android:background="@color/white"
                    android:visibility="gone"
                    app:tabContentStart="36dp"
                    app:tabGravity="fill"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="scrollable"
                    app:tabBackground="@color/white"
                    app:tabTextColor="?attr/colorPrimaryDark"
                    app:tabIndicatorColor="?attr/colorPrimaryDark"
                    app:tabTextAppearance="@style/TextAppearanceTabLayout"
                    app:tabIndicator="@drawable/tab_indicator">
                </com.google.android.material.tabs.TabLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <fragment
                android:id="@+id/home_nav_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_bar"
                app:navGraph="@navigation/home_nav_graph" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:backgroundTint="@color/colorPrimaryDark"
            app:navigationIcon="@drawable/ic_menu_white_24dp"
            android:layout_gravity="bottom"
            android:elevation="8dp">
        </com.google.android.material.bottomappbar.BottomAppBar>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/snack"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="48dp"
            android:layout_marginBottom="112dp">
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>