<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_focused="true"  android:state_enabled="false" android:state_pressed="true" android:drawable="@drawable/solid_on_surface_light" />
    <item android:state_focused="true"  android:state_enabled="false"                              android:drawable="@drawable/solid_on_surface_light" />
    <item android:state_focused="true"                                android:state_pressed="true" android:drawable="@drawable/np_list_selector_background_transition_holo" />
    <item android:state_focused="false"                               android:state_pressed="true" android:drawable="@drawable/np_list_selector_background_transition_holo" />
    <item android:state_focused="true"                                                             android:drawable="@drawable/solid_color_primary" />
    <item                                                                                          android:drawable="@color/transparent" />
</selector>