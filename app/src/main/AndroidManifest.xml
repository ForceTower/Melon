<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forcetower.uefs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.forcetower.uefs.UApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/UTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.forcetower.uefs.LauncherActivity"
            android:theme="@style/UTheme.LightNav">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.forcetower.uefs.feature.login.LoginActivity"
            android:theme="@style/UTheme.LightNav"/>

        <activity
            android:name="com.forcetower.uefs.feature.home.HomeActivity"
            android:theme="@style/UTheme.LightNav">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.forcetower.uefs.feature.about.AboutActivity"
            android:theme="@style/UTheme.Translucent.About" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>